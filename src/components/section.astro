---
import classNames from "classnames";

interface Props {
  title: string;
  titleSide?: "left" | "right";
}

const { title, titleSide = "left" } = Astro.props;

const sectionClass = classNames(
  "relative",
  "px-12",
  "py-8",

  "flex",
  "flex-col",
  "items-center",
  "space-x-0",
  "space-y-12",

  "lg:flex-row",
  "lg:space-x-12",
  "lg:space-y-0",

  { "flex-row-reverse": titleSide === "right" }
);

const headingClass = classNames(
  "text-8xl",
  "text-slate-700",

  "dark:drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)]",
  "dark:text-white",

  { "text-left": titleSide === "right" }
);
---

<section class={sectionClass}>
  <div class="flex-1 text-right flex flex-row justify-end">
    {
      titleSide === "left" ? (
        <div>
          <h1 class={headingClass}>{title}</h1>
          <slot name="title" />
        </div>
      ) : (
        <slot />
      )
    }
  </div>
  <div class="flex-1">
    {
      titleSide === "right" ? (
        <div>
          <h1 class={headingClass}>{title}</h1>
          <slot name="title" />
        </div>
      ) : (
        <slot />
      )
    }
  </div>
</section>
